# Voice Shopping List - Environment Configuration
#
# This file contains example environment variables for the voice-shopping-list component.
# Copy this file to .env before starting the application.

# ----------------------
# Speech Recognition API Configuration
# ----------------------

# Local VistaCare.node server (default)
VITE_API_URL=http://localhost:3001

# Remote VistaCare.node server
# VITE_API_URL=http://your-server-ip:3001

# OpenAI Whisper API configuration
# VITE_USE_OPENAI_API=true
# VITE_OPENAI_API_KEY=your-api-key-here
# VITE_OPENAI_API_URL=https://api.openai.com/v1/audio/transcriptions
# VITE_OPENAI_API_MODEL=whisper-1

# ----------------------
# Feature Flags
# ----------------------

# Enable local storage for persistence
VITE_ENABLE_STORAGE=true

# Default language for speech recognition
VITE_DEFAULT_LANGUAGE=en-US

# Maximum number of items to store
VITE_MAX_ITEMS=100

# ----------------------
# Component Customization
# ----------------------

# Default title for the shopping list
VITE_DEFAULT_TITLE=Shopping List

# Local storage key
VITE_STORAGE_KEY=voice-shopping-list

# ----------------------
# Development Settings
# ----------------------

# Enable debug logging
VITE_DEBUG=false

# Development server port
VITE_DEV_PORT=3000
